<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    style="@style/ActivityContentNoPadding"
    android:padding="@dimen/marginPadding10"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="全部"
        android:textColor="@color/color_3d3e40"
        android:textSize="@dimen/txt_size16"
        android:drawableLeft="@drawable/bg_circle_orange"
        android:drawablePadding="@dimen/marginPadding5"/>

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/color_3d3e40"
        android:textSize="@dimen/txt_size16"/>
</LinearLayout>