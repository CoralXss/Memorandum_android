<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/ActivityContentNoPadding"
    android:background="@drawable/bg_white_rectangle"
    android:padding="@dimen/marginPadding20">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="插入图片"
        android:textSize="@dimen/txt_size18"
        android:textColor="@color/color_3d3e40"
        android:gravity="center"
        android:layout_marginBottom="@dimen/marginPadding20"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_from_pictures"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="图库"
            android:textSize="@dimen/txt_size16"
            android:textColor="@color/color_3d3e40"
            android:gravity="center"
            android:drawableTop="@drawable/ic_gallery"
            android:drawablePadding="@dimen/marginPadding8"/>

        <TextView
            android:id="@+id/tv_from_files"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="文档"
            android:textSize="@dimen/txt_size16"
            android:textColor="@color/color_3d3e40"
            android:gravity="center"
            android:drawableTop="@drawable/ic_files"
            android:drawablePadding="@dimen/marginPadding8"/>

        <TextView
            android:id="@+id/tv_from_camera"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="相机"
            android:textSize="@dimen/txt_size16"
            android:textColor="@color/color_3d3e40"
            android:gravity="center"
            android:drawableTop="@drawable/ic_camera"
            android:drawablePadding="@dimen/marginPadding8"/>
    </LinearLayout>
</LinearLayout>